            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:maxLength="1"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:gravity="center"
            android:inputType="numberPassword"
            android:textColor="@color/white"
